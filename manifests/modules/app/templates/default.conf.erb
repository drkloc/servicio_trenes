<% if @ssl == "true" %>
server {
    listen 80;
    return 301 https://$host$request_uri;
}
<% end %>

server {
    listen       <% if @ssl == "true" %>443<% else %>80<%end%> default_server;
    server_name  _;
    access_log  /opt/apps/baid/nginx_access.log;
    error_log  /opt/apps/baid/nginx_error.log;

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /static {
        autoindex off;
        alias /opt/apps/baid/static/;
    }

    location /media {
        autoindex off;
        alias /opt/apps/baid/media/;
    }
}